<main class="user-reviews-main">
  <h1><%= title %></h1>
  <%- messages() %>
  
  <div class="reviews-container">
    <% if (reviews && reviews.length > 0) { %>
      <div class="reviews-header">
        <p>You have written <%= reviews.length %> review<%= reviews.length === 1 ? '' : 's' %>.</p>
      </div>
      
      <div class="reviews-grid">
        <% reviews.forEach(review => { %>
          <div class="review-card">
            <div class="review-header">
              <h3><%= review.inv_year %> <%= review.inv_make %> <%= review.inv_model %></h3>
              <div class="review-status">
                <span class="status-badge <%= review.is_approved ? 'approved' : 'pending' %>">
                  <%= review.is_approved ? 'Approved' : 'Pending' %>
                </span>
              </div>
            </div>
            
            <div class="review-content">
              <div class="review-title-rating">
                <h4><%= review.review_title %></h4>
                <div class="rating">
                  <% for(let i = 1; i <= 5; i++) { %>
                    <span class="star <%= i <= review.review_rating ? 'filled' : '' %>">‚òÖ</span>
                  <% } %>
                </div>
              </div>
              
              <p class="review-text"><%= review.review_text.length > 150 ? review.review_text.substring(0, 150) + '...' : review.review_text %></p>
              
              <div class="review-meta">
                <small>Posted: <%= new Date(review.review_date).toLocaleDateString() %></small>
                <% if (review.updated_at && review.updated_at !== review.review_date) { %>
                  <small>Updated: <%= new Date(review.updated_at).toLocaleDateString() %></small>
                <% } %>
              </div>
            </div>
            
            <div class="review-actions">
              <a href="/reviews/edit/<%= review.review_id %>" class="btn btn-primary btn-sm">Edit</a>
              <a href="/reviews/delete/<%= review.review_id %>" class="btn btn-danger btn-sm">Delete</a>
              <a href="/inv/detail/<%= review.inv_id %>" class="btn btn-secondary btn-sm">View Vehicle</a>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="no-reviews">
        <div class="no-reviews-icon">üìù</div>
        <h2>No Reviews Yet</h2>
        <p>You haven't written any reviews yet. Browse our inventory and share your experience with vehicles you've owned or driven!</p>
        <a href="/inv/" class="btn btn-primary">Browse Inventory</a>
      </div>
    <% } %>
  </div>
  
  <div class="navigation-actions">
    <a href="/account/" class="btn btn-secondary">Back to Account</a>
    <a href="/reviews/all" class="btn btn-outline">View All Reviews</a>
  </div>
</main>

