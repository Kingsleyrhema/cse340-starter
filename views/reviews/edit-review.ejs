<main class="edit-review-main">
  <h1><%= title %></h1>
  <%- messages() %>
  
  <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>
  
  <div class="review-container">
    <!-- Vehicle Information -->
    <div class="vehicle-info-card">
      <h2>Vehicle Information</h2>
      <div class="vehicle-summary">
        <div class="vehicle-details">
          <h3><%= reviewData.inv_year %> <%= reviewData.inv_make %> <%= reviewData.inv_model %></h3>
          <p><strong>Original Review Date:</strong> <%= new Date(reviewData.review_date).toLocaleDateString() %></p>
          <p><strong>Current Status:</strong> 
            <span class="status-<%= reviewData.is_approved ? 'approved' : 'pending' %>">
              <%= reviewData.is_approved ? 'Approved' : 'Pending Approval' %>
            </span>
          </p>
        </div>
      </div>
    </div>
    
    <!-- Edit Review Form -->
    <div class="review-form-section">
      <h2>Edit Your Review</h2>
      <p class="edit-note">Note: Editing your review will require re-approval before it appears on the vehicle page.</p>
      
      <form class="review-form" action="/reviews/edit" method="post">
        <input type="hidden" name="review_id" value="<%= reviewData.review_id %>">
        
        <div class="form-group">
          <label for="review_title">Review Title:</label>
          <input 
            type="text" 
            name="review_title" 
            id="review_title" 
            required 
            maxlength="100"
            value="<%= locals.review_title || reviewData.review_title %>"
          >
          <small>5-100 characters</small>
        </div>
        
        <div class="form-group">
          <label for="review_rating">Rating:</label>
          <div class="rating-input">
            <select name="review_rating" id="review_rating" required>
              <option value="">Select Rating</option>
              <option value="5" <%= (locals.review_rating || reviewData.review_rating) == 5 ? 'selected' : '' %>>★★★★★ (5 stars) - Excellent</option>
              <option value="4" <%= (locals.review_rating || reviewData.review_rating) == 4 ? 'selected' : '' %>>★★★★☆ (4 stars) - Very Good</option>
              <option value="3" <%= (locals.review_rating || reviewData.review_rating) == 3 ? 'selected' : '' %>>★★★☆☆ (3 stars) - Good</option>
              <option value="2" <%= (locals.review_rating || reviewData.review_rating) == 2 ? 'selected' : '' %>>★★☆☆☆ (2 stars) - Fair</option>
              <option value="1" <%= (locals.review_rating || reviewData.review_rating) == 1 ? 'selected' : '' %>>★☆☆☆☆ (1 star) - Poor</option>
            </select>
          </div>
        </div>
        
        <div class="form-group">
          <label for="review_text">Your Review:</label>
          <textarea 
            name="review_text" 
            id="review_text" 
            required
            maxlength="1000"
            rows="6"
          ><%= locals.review_text || reviewData.review_text %></textarea>
          <small>10-1000 characters</small>
        </div>
        
        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Update Review</button>
          <a href="/reviews/my-reviews" class="btn btn-cancel">Cancel</a>
          <a href="/reviews/delete/<%= reviewData.review_id %>" class="btn btn-danger">Delete Review</a>
        </div>
      </form>
    </div>
  </div>
</main>

<style>
.edit-review-main {
  max-width: 900px;
