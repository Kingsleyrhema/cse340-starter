<main class="manage-reviews-main">
  <h1><%= title %></h1>
  <%- messages() %>
  
  <div class="management-container">
    <!-- Statistics Dashboard -->
    <div class="stats-dashboard">
      <h2>Review Statistics</h2>
      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-number"><%= stats.total_reviews || 0 %></div>
          <div class="stat-label">Total Reviews</div>
        </div>
        <div class="stat-card">
          <div class="stat-number"><%= stats.approved_reviews || 0 %></div>
          <div class="stat-label">Approved</div>
        </div>
        <div class="stat-card">
          <div class="stat-number"><%= stats.pending_reviews || 0 %></div>
          <div class="stat-label">Pending</div>
        </div>
        <div class="stat-card">
          <div class="stat-number"><%= stats.avg_rating || '0.0' %></div>
          <div class="stat-label">Avg Rating</div>
        </div>
      </div>
    </div>
    
    <!-- Pending Reviews Section -->
    <div class="pending-reviews-section">
      <h2>Pending Reviews (<%= pendingReviews.length %>)</h2>
      
      <% if (pendingReviews && pendingReviews.length > 0) { %>
        <div class="reviews-list">
          <% pendingReviews.forEach(review => { %>
            <div class="review-item">
              <div class="review-info">
                <div class="vehicle-info">
                  <h3><%= review.inv_year %> <%= review.inv_make %> <%= review.inv_model %></h3>
                  <p class="reviewer">by <%= review.account_firstname %> <%= review.account_lastname %></p>
                </div>
                
                <div class="review-content">
                  <div class="review-header">
                    <h4><%= review.review_title %></h4>
                    <div class="rating">
                      <% for(let i = 1; i <= 5; i++) { %>
                        <span class="star <%= i <= review.review_rating ? 'filled' : '' %>">‚òÖ</span>
                      <% } %>
                      (<%= review.review_rating %>/5)
                    </div>
                  </div>
                  <p class="review-text"><%= review.review_text %></p>
                  <div class="review-meta">
                    <small>Submitted: <%= new Date(review.review_date).toLocaleDateString() %></small>
                  </div>
                </div>
              </div>
              
              <div class="review-actions">
                <form class="action-form" action="/reviews/manage" method="post">
                  <input type="hidden" name="review_id" value="<%= review.review_id %>">
                  <button type="submit" name="action" value="approve" class="btn btn-success">
                    ‚úì Approve
                  </button>
                  <button type="submit" name="action" value="reject" class="btn btn-warning">
                    ‚úó Reject
                  </button>
                  <button type="submit" name="action" value="delete" class="btn btn-danger">
                    üóëÔ∏è Delete
                  </button>
                </form>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="no-pending">
          <div class="no-pending-icon">‚úÖ</div>
          <h3>No Pending Reviews</h3>
          <p>All reviews have been processed. Great job!</p>
        </div>
      <% } %>
    </div>
    
    <!-- Quick Actions -->
    <div class="quick-actions">
      <h2>Quick Actions</h2>
      <div class="actions-grid">
        <a href="/reviews/all" class="btn btn-outline">View All Reviews</a>
        <a href="/inv/" class="btn btn-outline">Manage Inventory</a>
        <a href="/account/" class="btn btn-secondary">Back to Account</a>
      </div>
    </div>
  </div>
</main>

