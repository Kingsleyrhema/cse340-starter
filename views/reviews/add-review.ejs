<main class="add-review-main">
  <h1><%= title %></h1>
  <%- messages() %>
  
  <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>
  
  <div class="review-container">
    <!-- Vehicle Information -->
    <div class="vehicle-info-card">
      <h2>Vehicle Information</h2>
      <div class="vehicle-summary">
        <div class="vehicle-details">
          <h3><%= vehicleData.inv_year %> <%= vehicleData.inv_make %> <%= vehicleData.inv_model %></h3>
          <p><strong>Price:</strong> $<%= new Intl.NumberFormat('en-US').format(vehicleData.inv_price) %></p>
          <p><strong>Mileage:</strong> <%= new Intl.NumberFormat('en-US').format(vehicleData.inv_miles) %> miles</p>
          <p><strong>Color:</strong> <%= vehicleData.inv_color %></p>
        </div>
        <div class="vehicle-image">
          <img src="<%= vehicleData.inv_thumbnail %>" alt="<%= vehicleData.inv_make %> <%= vehicleData.inv_model %>">
        </div>
      </div>
    </div>
    
    <!-- Review Form -->
    <div class="review-form-section">
      <h2>Write Your Review</h2>
      <form class="review-form" action="/reviews/add" method="post">
        <input type="hidden" name="inv_id" value="<%= vehicleData.inv_id %>">
        
        <div class="form-group">
          <label for="review_title">Review Title:</label>
          <input 
            type="text" 
            name="review_title" 
            id="review_title" 
            required 
            maxlength="100"
            placeholder="Give your review a title..."
            value="<%= locals.review_title || '' %>"
          >
          <small>5-100 characters</small>
        </div>
        
        <div class="form-group">
          <label for="review_rating">Rating:</label>
          <div class="rating-input">
            <select name="review_rating" id="review_rating" required>
              <option value="">Select Rating</option>
              <option value="5" <%= locals.review_rating == 5 ? 'selected' : '' %>>★★★★★ (5 stars) - Excellent</option>
              <option value="4" <%= locals.review_rating == 4 ? 'selected' : '' %>>★★★★☆ (4 stars) - Very Good</option>
              <option value="3" <%= locals.review_rating == 3 ? 'selected' : '' %>>★★★☆☆ (3 stars) - Good</option>
              <option value="2" <%= locals.review_rating == 2 ? 'selected' : '' %>>★★☆☆☆ (2 stars) - Fair</option>
              <option value="1" <%= locals.review_rating == 1 ? 'selected' : '' %>>★☆☆☆☆ (1 star) - Poor</option>
            </select>
          </div>
        </div>
        
        <div class="form-group">
          <label for="review_text">Your Review:</label>
          <textarea 
            name="review_text" 
            id="review_text" 
            required
            maxlength="1000"
            rows="6"
            placeholder="Share your experience with this vehicle..."
          ><%= locals.review_text || '' %></textarea>
          <small>10-1000 characters</small>
        </div>
        
        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Submit Review</button>
          <a href="/inv/detail/<%= vehicleData.inv_id %>" class="btn btn-cancel">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</main>

