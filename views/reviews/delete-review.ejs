  color: #7f1d1d;
  font-size: 1.1rem;
  margin: 0;
}

.review-details {
  background: #f8f9fa;
  border-radius: 8px;
  padding: 1.5rem;
  border: 1px solid #e9ecef;
}

.review-details h3 {
  margin: 0 0 1rem 0;
  color: #2c3e50;
}

.vehicle-info h4 {
  color: #3498db;
  margin: 0 0 1rem 0;
}

.review-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 1rem;
}

.review-header h5 {
  margin: 0;
  color: #2c3e50;
  font-size: 1.2rem;
}

.rating {
  display: flex;
  align-items: center;
  gap: 0.25rem;
}

.star {
  font-size: 1.2rem;
  color: #ddd;
}

.star.filled {
  color: #ffc107;
}

.review-text {
  background: #fff;
  padding: 1rem;
  border-radius: 5px;
  border: 1px solid #e9ecef;
  margin: 0 0 1rem 0;
  line-height: 1.6;
}

.review-meta {
  display: flex;
  justify-content: space-between;
