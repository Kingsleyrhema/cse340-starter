<main class="delete-review-main">
  <h1><%= title %></h1>
  <%- messages() %>
  
  <div class="delete-container">
    <div class="warning-section">
      <div class="warning-icon">⚠️</div>
      <h2>Confirm Deletion</h2>
      <p class="warning-text">Are you sure you want to delete this review? This action cannot be undone.</p>
    </div>
    
    <div class="review-details">
      <h3>Review Details</h3>
      <div class="review-info">
        <div class="vehicle-info">
          <h4><%= reviewData.inv_year %> <%= reviewData.inv_make %> <%= reviewData.inv_model %></h4>
        </div>
        
        <div class="review-content">
          <div class="review-header">
            <h5><%= reviewData.review_title %></h5>
            <div class="rating">
              <% for(let i = 1; i <= 5; i++) { %>
                <span class="star <%= i <= reviewData.review_rating ? 'filled' : '' %>">★</span>
              <% } %>
              (<%= reviewData.review_rating %>/5)
            </div>
          </div>
          <p class="review-text"><%= reviewData.review_text %></p>
          <div class="review-meta">
            <small>Posted on: <%= new Date(reviewData.review_date).toLocaleDateString() %></small>
            <small>Status: <%= reviewData.is_approved ? 'Approved' : 'Pending Approval' %></small>
          </div>
        </div>
      </div>
    </div>
    
    <form class="delete-form" action="/reviews/delete" method="post">
      <input type="hidden" name="review_id" value="<%= reviewData.review_id %>">
      
      <div class="form-actions">
        <button type="submit" class="btn btn-danger">Delete Review</button>
        <a href="/reviews/my-reviews" class="btn btn-cancel">Cancel</a>
      </div>
    </form>
  </div>
</main>

<style>
.delete-review-main {
  max-width: 600px;
  margin: 40px auto;
  padding: 2rem;
  background: #fff;
  border-radius: 10px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.delete-review-main h1 {
  text-align: center;
  margin-bottom: 2rem;
  color: #2c3e50;
}

.delete-container {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

