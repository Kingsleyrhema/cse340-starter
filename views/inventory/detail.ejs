<main>
  <h1><%= title %></h1>
  <div class="vehicle-detail-wrapper">
    <%- detail %>
  </div>
</main>

<style>
.vehicle-detail-container {
  display: flex;
  flex-wrap: wrap;
  gap: 2rem;
  align-items: flex-start;
  margin: 2rem 0;
}
.vehicle-detail-image {
  flex: 1 1 300px;
  min-width: 250px;
  max-width: 400px;
}
.vehicle-detail-image img {
  width: 100%;
  height: auto;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}
.vehicle-detail-info {
  flex: 2 1 350px;
  min-width: 250px;
  max-width: 600px;
  background: #fafafa;
  padding: 1.5rem;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.07);
}
.vehicle-detail-info h2 {
  margin-top: 0;
}
@media (max-width: 700px) {
  .vehicle-detail-container {
    flex-direction: column;
    align-items: stretch;
  }
  .vehicle-detail-image, .vehicle-detail-info {
    max-width: 100%;
  }
}
</style> 