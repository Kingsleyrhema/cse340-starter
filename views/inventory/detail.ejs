<main>
  <h1><%= title %></h1>
  <%- messages() %>
  
  <div class="vehicle-detail-wrapper">
    <%- detail %>
  </div>
  
  <!-- Reviews Section -->
  <section class="reviews-section">
    <div class="reviews-header">
      <h2>Customer Reviews</h2>
      <div class="rating-summary">
        <% if (averageRating && averageRating.review_count > 0) { %>
          <div class="avg-rating">
            <div class="rating-stars">
              <% for(let i = 1; i <= 5; i++) { %>
                <span class="star <%= i <= Math.round(averageRating.avg_rating) ? 'filled' : '' %>">★</span>
              <% } %>
            </div>
            <span class="rating-text">
              <%= parseFloat(averageRating.avg_rating).toFixed(1) %>/5 
              (<%= averageRating.review_count %> review<%= averageRating.review_count === 1 ? '' : 's' %>)
            </span>
          </div>
        <% } else { %>
          <p class="no-rating">No reviews yet</p>
        <% } %>
      </div>
    </div>
    
    <!-- Review Actions -->
    <div class="review-actions">
      <% if (locals.loggedin) { %>
        <% if (!hasUserReviewed) { %>
          <a href="/reviews/add/<%= inv_id %>" class="btn btn-primary">Write a Review</a>
        <% } else { %>
          <p class="already-reviewed">You have already reviewed this vehicle. <a href="/reviews/my-reviews">Manage your reviews</a></p>
        <% } %>
      <% } else { %>
        <p class="login-prompt">
          <a href="/account/login">Login</a> to write a review
        </p>
      <% } %>
    </div>
    
    <!-- Reviews List -->
    <div class="reviews-list">
      <% if (reviews && reviews.length > 0) { %>
        <% reviews.forEach(review => { %>
          <div class="review-item">
            <div class="review-header">
              <div class="reviewer-info">
                <h4><%= review.account_firstname %> <%= review.account_lastname %></h4>
                <div class="review-rating">
                  <% for(let i = 1; i <= 5; i++) { %>
                    <span class="star <%= i <= review.review_rating ? 'filled' : '' %>">★</span>
                  <% } %>
                </div>
              </div>
              <div class="review-date">
                <%= new Date(review.review_date).toLocaleDateString() %>
              </div>
            </div>
            <h5 class="review-title"><%= review.review_title %></h5>
            <p class="review-text"><%= review.review_text %></p>
          </div>
        <% }) %>
      <% } else { %>
        <div class="no-reviews">
          <p>No reviews yet. Be the first to share your experience!</p>
        </div>
      <% } %>
    </div>
    
    <div class="review-footer">
      <a href="/reviews/all" class="btn btn-outline">View All Reviews</a>
    </div>
  </section>
</main>

