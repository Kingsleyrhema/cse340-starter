<main class="management-main">
  <h1><%= title %></h1>
  <%- messages() %>
  
  <div class="management-links">
    <div class="management-card">
      <h2>Add New Classification</h2>
      <p>Create a new vehicle classification to organize your inventory.</p>
      <a href="/inv/add-classification" class="btn btn-primary">Add Classification</a>
    </div>
    
    <div class="management-card">
      <h2>Add New Inventory</h2>
      <p>Add a new vehicle to your inventory database.</p>
      <a href="/inv/add-inventory" class="btn btn-primary">Add Inventory</a>
    </div>
  </div>

  <div class="inventory-management-section">
    <h2>Manage Inventory</h2>
    <p>Select a classification from the list to see the items belonging to the classification.</p>
    
    <div class="classification-select-container">
      <%- classificationSelect %>
    </div>
    
    <table id="inventoryDisplay"></table>
    
    <noscript>JavaScript must be enabled to use this page.</noscript>
  </div>
</main>

<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="/css/styles.css">

<style>
.management-main {
  max-width: 800px;
  margin: 40px auto;
  padding: 2rem;
}

.management-main h1 {
  text-align: center;
  margin-bottom: 2rem;
  color: #2c3e50;
}

.management-links {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
  margin-top: 2rem;
}

.management-card {
  background: #fff;
  padding: 2rem;
  border-radius: 10px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  text-align: center;
  transition: transform 0.2s, box-shadow 0.2s;
}

.management-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
}

.management-card h2 {
  color: #2c3e50;
  margin-bottom: 1rem;
}

.management-card p {
  color: #7f8c8d;
  margin-bottom: 1.5rem;
  line-height: 1.6;
}

.btn {
  display: inline-block;
  padding: 0.75rem 1.5rem;
  border-radius: 5px;
  text-decoration: none;
  font-weight: bold;
  transition: all 0.2s;
  border: none;
  cursor: pointer;
}

.btn-primary {
  background: #3498db;
  color: #fff;
}

.btn-primary:hover {
  background: #2980b9;
  transform: translateY(-2px);
}

.notice {
  background: #27ae60;
  color: #fff;
  padding: 1rem;
  border-radius: 5px;
  margin-bottom: 1rem;
  text-align: center;
}

.error {
  background: #e74c3c;
  color: #fff;
  padding: 1rem;
  border-radius: 5px;
  margin-bottom: 1rem;
  text-align: center;
}

.inventory-management-section {
  margin-top: 3rem;
  padding: 2rem;
  background: #fff;
  border-radius: 10px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.inventory-management-section h2 {
  color: #2c3e50;
  margin-bottom: 1rem;
}

.inventory-management-section p {
  color: #7f8c8d;
  margin-bottom: 1.5rem;
}

.classification-select-container {
  margin-bottom: 2rem;
}

.classification-select-container select {
  padding: 0.5rem;
  border: 1px solid #ddd;
  border-radius: 5px;
  font-size: 1rem;
  min-width: 200px;
}

#inventoryDisplay {
  width: 100%;
  border-collapse: collapse;
  margin-top: 1rem;
}

#inventoryDisplay thead th {
  background: #34495e;
  color: #fff;
  padding: 0.75rem;
  text-align: left;
}

#inventoryDisplay tbody td {
  padding: 0.75rem;
  border-bottom: 1px solid #ddd;
}

#inventoryDisplay tbody tr:hover {
  background: #f8f9fa;
}

#inventoryDisplay a {
  color: #3498db;
  text-decoration: none;
  margin-right: 1rem;
}

#inventoryDisplay a:hover {
  text-decoration: underline;
}
</style>

<script src="../../js/inventory.js"></script> 